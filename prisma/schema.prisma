generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PRISMA_URL")
}

enum SkillCategory {
  FRONTEND
  FULLSTACK
  FRAMEWORK
  BACKEND
  DATABASE
  TOOLS
}

model Skill {
  id       Int      @id @default(autoincrement())
  name     String
  category SkillCategory
  rating   Int
}

enum ContractType {
  CDI
  FREELANCE
  CONSULTANT
}

enum PresenceType {
  ON_SITE
  HYBRID
  REMOTE
}

model Experience {
  id          Int           @id @default(autoincrement())
  title       String
  company     String
  location    String
  startDate   String
  endDate     String
  description String
  contractType ContractType
  stack       String[]
  tasks       String[]
  presenceType PresenceType
}
